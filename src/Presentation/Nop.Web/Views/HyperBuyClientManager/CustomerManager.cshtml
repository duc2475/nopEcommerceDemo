@using Nop.Core.Domain.Common
@using Nop.Web.Models.HyperBuyClientManager

@inject CommonSettings commonSettings

@model HyperCustomerZone
@{
    Layout = "_ColumnsOne";
    var breadcrumbDelimiter = commonSettings.BreadcrumbDelimiter;
}

<div class="container">
    <div class="breadcrumb">
        <ul>
            <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z" />
                </svg>
                <a href="@Url.RouteUrl("Homepage")" title="@T("Categories.Breadcrumb.Top")">@T("Categories.Breadcrumb.Top")</a>
                <span class="delimiter">@breadcrumbDelimiter</span>
            </li>
            <li id="InnerBreadcrumbPraent" style="display: none"></li>
            <li id="InnerBreadcrumbChild" style="display: none"></li>
        </ul>
    </div>
</div>

<div class="container">
    <div class="side-2" style="width: 20% !important">
        @await Html.PartialAsync("~/Views/Shared/Components/HyperBuyNavigation/HyperBuyNavigation.cshtml", Model.CustomerInfo)
    </div>
    <div class="center-2 background-white mt-3" style="width: 79% !important">
        @RenderBody()
    </div>
</div>

