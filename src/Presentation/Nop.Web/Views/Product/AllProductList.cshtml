@model IList<ProductOverviewModel>

@{
    Layout = "_ColumnsTwo";
}
<div class="page recently-viewed-products-page">
    
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                <div class="item-grid">
                    @foreach (var product in Model)
                    {
                        <div class="item-box" style="max-width: 288px !important; box-shadow: 0 0 4px 1px #ddd; border-radius: 10px">
                            @await Html.PartialAsync("_ProductBox", product)
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
