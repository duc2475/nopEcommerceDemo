@model CountDowntModel;

@{
    if (Model == null)
    {
                            <div class="time-down-wrap">
                                <div class="time-down-item">0</div> :
                                <div class="time-down-item">0</div> :
                                <div class="time-down-item">0</div>
                    </div>
    }
    else
    {
        var CountDown = Model.DateTime;

                            <div class="time-down-wrap">
                                <div class="time-down-item" id="hours"></div> :
                                <div class="time-down-item" id="minutes"></div> :
                                <div class="time-down-item" id="seconds"></div>
                            </div>
                    <script asp-location="Footer">
                        setInterval(function () {
                            var time = new Date();
                            time.setDate(@CountDown.Value.Day);
                            time.setHours(@CountDown.Value.Hour, @CountDown.Value.Minute, @CountDown.Value.Second);
                            var now = new Date().getTime();
                            var countdown = time - now;
                            var hours = Math.floor((countdown) / (1000 * 60 * 60));
                            var minutes = Math.floor((countdown % (1000 * 60 * 60)) / (1000 * 60));
                            var seconds = Math.floor((countdown % (1000 * 60)) / 1000);
                            document.getElementById('hours').innerHTML = hours;
                            document.getElementById('minutes').innerHTML = minutes;
                            document.getElementById('seconds').innerHTML = seconds;
                        }, 1000);
                    </script>
    }
}



