@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="nop-jcarousel product-grid home-page-product-grid">
        <div class="title carousel-title has-navigation">
            <strong>@T("Homepage.Products")</strong>
        </div>
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box" style="max-width: 288px !important; box-shadow: 0 0 4px 1px #ddd; border-radius: 10px">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}